
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Method1</title>
</head>
<body>
    <h1>Method1</h1>

    <!--TempData-->

    <h3>@TempData["Message"]</h3>

    <p>There are @TempData["CustomerCount"] customers added into the list</p>

    <table>
        <thead>
            <tr>
                <th>Customer Id</th>
                <th>Customer Name</th>
                <th>Customer Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in TempData["CustomerList"] as List<Customer>)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Amount</td>
                </tr>
            }
        </tbody>
    </table>

   

    <a asp-controller="Demo" asp-action="Method2">Go to Method2</a>

    <hr />

    @Html.ActionLink("Details Page", "Details", "Customer")

    <br />
    <a asp-controller="Customer" asp-action="Message">Message</a>
</body>
</html>
